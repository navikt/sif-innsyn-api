<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="stdout"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="net.logstash.logback.encoder.LogstashEncoder" />
	</appender>
	<springProfile name="local, test">
		<appender name="stdout"
			class="ch.qos.logback.core.ConsoleAppender">
			<layout class="ch.qos.logback.classic.PatternLayout">
				<Pattern>
					%d{yyyy-MM-dd HH:mm:ss} %X{correlation_id} %X{journalpost_id} [%thread] %-5level %logger{70} - %msg%n
				</Pattern>
			</layout>
		</appender>
	</springProfile>
	<root level="info">
		<appender-ref ref="stdout" />
	</root>
	<springProfile name="default">
		<turboFilter
			class="ch.qos.logback.classic.turbo.MarkerFilter">
			<Name>CONFIDENTIAL_FILTER</Name>
			<Marker>CONFIDENTIAL</Marker>
			<OnMatch>DENY</OnMatch>
		</turboFilter>
	</springProfile>
	<springProfile name="dev-gcp,prod-gcp,local">
		<logger name="no.nav.sifinnsynapi" level="trace" />
	</springProfile>
</configuration>

